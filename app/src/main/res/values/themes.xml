<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Space" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimaryDark">#2F1B52</item>
    </style>

    <style name="Theme.Space" parent="Base.Theme.Space" />

    <!--Shaped images-->
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--Dark blue-->
    <style name="DarkBlueBackgroundButton">
        <item name="android:backgroundTint">@color/maroon</item>
        <item name="cornerRadius">@dimen/_10mdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!--Option's text view fragment introduction-->
    <style name="TextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>



</resources>